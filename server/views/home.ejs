<html>

<head>
  <title>Video Player</title>
</head>
<style>
  .wrapper {
    width: 100%;
  }

  .content-wrapper {
    margin: 0 auto;
    padding: 15px;
    text-align: center;
    max-width: 1140px;
  }

  .video-list {
    text-align: left;
    border: 1px solid #ccc;
    width: 100%;
  }

  .video-box {
    float: left;
    width: 48%;
    margin: 10px;
  }
  .video-name{
    cursor: pointer;
  }
</style>

<body>
  <div class="wrapper">
    <div class="content-wrapper">
      <h1>Welcome to Video Player</h1>
      </video>
      <div class="video-list">
        <% videos.forEach(function(video) { %>
          <div class="video-box">
            <p>
              <%= video.id %>
            </p>
            <p>
              <video src="uploads/<%= video.name %>" id="myvideo-<%= video.id %>" width="400" height="320" controls style="background:black"></video>
            </p>
            <p>
              <strong class="video-name" onclick="playvideo('myvideo-<%= video.id %>')">
                <%= video.name %>
              </strong>
            </p>
          </div>
          <% }); %>
      </div>
    </div>
  </div>
  <script>
    function playvideo(id) {
      var video = document.getElementById(id);
      video.play();
    }
  </script>
</body>

</html>